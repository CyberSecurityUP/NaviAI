# =========================
# NaviAI Environment Config
# =========================

# ── LLM Provider ───────────────────────────────────────────
# Options: "anthropic", "openai", "ollama"
LLM_PROVIDER=ollama

# Anthropic (optional - leave empty to skip)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_VISION_MODEL=claude-sonnet-4-20250514

# OpenAI (optional - leave empty to skip)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o

# Ollama (local models - no API key needed)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_VISION_BASE_URL=http://localhost:11435
OLLAMA_MODEL=llama3.2
OLLAMA_VISION_MODEL=llava

# ── Auth / JWT ─────────────────────────────────────────────
SECRET_KEY=change-this-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ── Database ───────────────────────────────────────────────
DATABASE_URL=sqlite+aiosqlite:///./data/naviai.db

# ── Google OAuth (optional) ────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# ── Dev Mode ───────────────────────────────────────────────
# When true, enables /api/v1/auth/dev-session for quick testing
DEV_MODE=true

# ── Frontend ───────────────────────────────────────────────
NEXT_PUBLIC_API_URL=http://localhost:8000
